{% extends 'base.html.twig' %}

{% block content %}
    <!doctype html>
    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 text-gray-900">

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Articles</h1>
        <ul class="space-y-6">
            {% for item in items %}
                <li class="bg-white shadow-md rounded-lg p-6">
                    <a href="/articles/{{ item.getTitle() | url_encode }}" class="text-2xl font-semibold mb-2 text-blue-500 hover:text-black-700">
                        {{ item.getTitle() }}
                    </a>
                    <p class="text-gray-700">
                        {{ item.getContent()|length > 500 ? item.getContent()[:500] ~ '...' : item.getContent() }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>

    </body>
    </html>
{% endblock %}